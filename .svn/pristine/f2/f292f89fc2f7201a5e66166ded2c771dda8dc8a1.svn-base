// 一列の画像の数，一つの画像の横幅，一つの画像の縦幅，画像のリスト
function lineUpImage(divX, width, height, children){
	count = 0;
	for(var i = 0; i < children.length; i++){
		$("#mosaic").append('<img src="' + children[i] + '" style="width:' + width + 'px; height:' + height +'px;">');
		count++;
		if(count >= divX){
			$("#mosaic").append('<br>');
			count = 0
		}
	}
}